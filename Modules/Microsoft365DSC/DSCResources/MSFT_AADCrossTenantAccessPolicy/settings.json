{
    "resourceName": "AADCrossTenantAccessPolicy",
    "description": "This resource configures an Azure AD Cross Tenant Policy (XTAP).",
    "roles": {
        "read": [
            "Global Reader"
        ],
        "update": [
            "Security Administrator"
        ]
    },
    "permissions": {
        "graph": {
            "delegated": {
                "read": [
                    {
                        "name": "Policy.Read.All"
                    }
                ],
                "update": [
                    {
                        "name": "Policy.ReadWrite.CrossTenantAccess"
                    }
                ]
            },
            "application": {
                "read": [
                    {
                        "name": "Policy.Read.All"
                    }
                ],
                "update": [
                    {
                        "name": "Policy.ReadWrite.CrossTenantAccess"
                    }
                ]
            }
        }
    }
}
